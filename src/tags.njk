---
layout: base.njk
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag | slug }}/
---

<!-- posts_list -->
<section class="posts-list">
    <h3>Tagged with {{ tag }}</h3>
    <ul>
        {% for post in collections[tag] | reverse %}
        <li>
            <h2><a href="{{ post.url | url }}">{{ post.data.title }}</a></h2>
            <div class="meta">
                <time class="meta-date">
                    <i class="fa fa-clock-o"></i> {{ post.data.date | postDate }} Ð² {{ post.data.date | postTime }}
                </time>
                <span class="meta-tags">
                    {% if post.data.tags %}
                        <i class="fa fa-tags"></i>
                        {% for tag in post.data.tags %}
                            <a href="/tags/{{ tag }}">{{ tag }}</a>{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    {% endif %}
                </span>
            </div>
        </li>
        {% endfor %}
    </ul>
</section>
<!-- /posts_list -->